---
import { turso } from '../turso';

const { rows } = await turso.execute('SELECT * FROM projects');
---

<section id="projects" class="py-8">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-6">Últimos Proyectos</h2>
    <div class="space-y-8">
      {
        rows.map((post) => (
          <div class="p-6 shadow-md w-1/3 bg-black/10 hover:bg-black/20 active:scale-[98%] hover:scale-[101%]  rounded">
            <h3 class="text-2xl font-semibold mb-2">{post.title}</h3>
            <p class="mb-2">{post.description}</p>
            <p class="mb-4">
              <strong>Tecnologías Utilizadas:</strong> {post.technologies}
            </p>
            <a
              href={String(post.link)}
              class="text-blue-500 hover:underline"
              target="_blank"
            >
              {post.link}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
